    <em:contributor>Travis Seitler</em:contributor>
    <em:homepageURL>https://github.com/travisseitler/xpi-sender-address-columns-reborn/</em:homepageURL>
    <em:iconURL>chrome://SenderAddressColumn/skin/icon.png</em:iconURL>
    <em:type>2</em:type> <!-- 2 : Extension -->

