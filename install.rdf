        <em:minVersion>7.0</em:minVersion>
        <em:maxVersion>69.*</em:maxVersion>
      </rdf:Description>
    </em:targetApplication>

    <em:localized>
      <rdf:Description>
        <em:locale>es</em:locale>
        <em:name>ColumnaDirecciónDelRemitente</em:name>
